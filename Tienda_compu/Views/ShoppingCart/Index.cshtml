@model Tienda_compu.ViewModels.ShoppingCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}
<script src="<%: Url.Content( '~/Scripts/jquery.unobtrusive-ajax.min.js') %>" type="text/javascript"></script>
<script src="~/Scripts/jquery-1.10.2.min.js"
        type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        // Document.ready -> link up remove event handler
        $(".RemoveLink").click(function () {
            // Get the id from the link
            var recordToDelete = $(this).attr("data-id");
            if (recordToDelete != '') {
                // Perform the ajax post
                $.post("/ShoppingCart/RemoveFromCart", {"id": recordToDelete },
                    function (data) {
                        // Successful requests get here
                        // Update the page elements
                        if (data.ItemCount == 0) {
                            $('#row-' + data.DeleteId).fadeOut('slow');
                        } else {
                            $('#item-count-' + data.DeleteId).text(data.ItemCount);
                        }
                        $('#cart-total').text(data.CartTotal);
                        $('#update-message').text(data.Message);
                        $('#cart-status').text('Cart (' + data.CartCount + ')');
                    });
            }
        });
    });
</script>
<h3>
    <em>Revisa</em> tu carrito:
</h3>


<input type="button" class="btn btn-info" value="Checkout" onclick="location.href='@Url.Action("AddressAndPayment", "Checkout")'" />
<div id="update-message">
</div>
<!--Roxana-->
<div class="container">
    <div class="row">
        <div class="col-xs-7">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-6">
                                <h5><span class="glyphicon glyphicon-shopping-cart"></span> Carrito de Compra</h5>
                            </div>
                            <div class="col-xs-6">
                                <button type="button" class="btn btn-primary btn-sm btn-block" onclick="location.href='@Url.Action("Index", "Productoes")'">
                                    <span class="glyphicon glyphicon-share-alt"></span> Sigue Comprando
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <table>
                            <tr>
                                <th>
                                    <div class="col-xs-1">
                                        <div class="col-xs-1 text-left">
                                            <h4><strong>Producto</strong></h4>
                                        </div>
                                    </div>
                                </th>
                                <th>
                                    <div class="col-xs-2">
                                        <div class="col-xs-2 text-left">
                                            <h4><strong>Precio Unitario</strong></h4>
                                        </div>
                                    </div>
                                </th>
                                <th>
                                    <div class="col-xs-2">
                                        <div class="col-xs-3 text-left">
                                            <h4><strong>Cantidad</strong></h4>
                                        </div>
                                    </div>
                                </th>
                                <th></th>
                            </tr>
                            @foreach (var item in
Model.CartItems)
                            {
                                <tr id="row-@item.RecordId">
                                    <td>
                                        @Html.ActionLink(item.Producto.Nombre,
"Details", "Store", new { id = item.ProductoId }, null)
                                    </td>
                                    <td>
                                        @item.Producto.Precio
                                    </td>
                                    <td id="item-count-@item.RecordId">
                                        @item.Count
                                    </td>
                                    <td>
                                        <div >
                                            <button  class="RemoveLink" data-id="@item.RecordId">
                                                Remove from cart
                                                
                                            </button>
                                        </div>
                                       
                                    </td>
                                </tr>
                            }
                            <tr>
                                <td>
                                    Total
                                </td>
                                <td></td>
                                <td></td>
                                <td id="cart-total">
                                    @Model.CartTotal
                                </td>
                               
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
